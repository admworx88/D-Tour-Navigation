                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="18dp"
                                    android:layout_gravity="right"
                                    />
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:id="@+id/Inspector"
                            android:padding="10dp"
                            android:background="@drawable/button_selector_2">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/inspector"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LINE INSPECTION"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/next2"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="18dp"
                                    android:layout_gravity="right"
                                    />
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:id="@+id/CashAudit"
                            android:padding="10dp"
                            android:background="@drawable/button_selector_2">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/cashaudit2"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CASH AUDIT"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/next2"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="18dp"
                                    android:layout_gravity="right"
                                    />
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>


