<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green">

            <LinearLayout

                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerInParent="true">


                <TextView
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="CASH AUDIT DASHBOARD"/>


            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Inspector Information"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/counter_text_bg"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/textColor">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/inspectoruser"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/textInsID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="002435"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ALJON  MOLIVA"
                        android:id="@+id/textInsName"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textInsType"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:text="TF"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Bus Information"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/counter_text_bg"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textColor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/TextView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bus No:"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:layout_marginRight="33dp"/>

                            <TextView
                                android:id="@+id/TextView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Driver:"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="41dp"/>

                            <TextView
                                android:id="@+id/TextView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Conductor:"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="13dp"/>
                            <TextView
                                android:id="@+id/TextView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trip No:"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"
                                android:textSize="11sp"
                                android:layout_marginRight="31dp"/>
                            <TextView
                                android:id="@+id/TextView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Route Code:"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="5dp"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:id="@+id/TextView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:text="B24351    YUTONG  A"/>
                            <TextView
                                android:id="@+id/TextView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="002435    ALJON D. MOLIVA"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="5dp"/>
                            <TextView
                                android:id="@+id/TextView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="002436    RUDY J. ALAG JR."
                                android:textSize="11sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:id="@+id/TextView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="5dp"/>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="2dp">
                                <TextView
                                    android:id="@+id/TextView10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="01"
                                    android:textSize="11sp"
                                    android:layout_marginRight="5dp"/>

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/counter_text_bg"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold|italic"
                                android:textSize="12sp"
                                android:id="@+id/TextViewKmPost"
                                android:text="KM POST ENTERED : "/>

                            <TextView
                                android:id="@+id/TextViewKmPostNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="@color/buscolorlogo"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/TextView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Passenger: "
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:id="@+id/TextView30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Baggage   : "
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="8dp"/>
                            <TextView
                                android:id="@+id/TextView31"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Collection : "
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="8dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/TextView20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textSize="11sp"
                                android:layout_gravity="right"/>
                            <TextView
                                android:id="@+id/TextView36"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:layout_marginTop="5dp"
                                android:textSize="11sp"
                                android:layout_gravity="right"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/TextView25"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000.00"
                                android:textSize="11sp"
                                android:layout_gravity="right"/>
                            <TextView
                                android:id="@+id/TextView41"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000.00"
                                android:textSize="11sp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="right"/>
                            <TextView
                                android:id="@+id/TextView42"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0000.00"
                                android:textSize="11sp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="right"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>